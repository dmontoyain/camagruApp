@model camagruApp.Models.Filter
@{
    ViewData["Title"] = "New Filter";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>
<br>
<div class="col-md-4">
    <form method="post" enctype="multipart/form-data" asp-action="Filter">
        <div class="form-group">
            <input type="file" asp-for="img" class="form-control" name="filter"/>
            <span asp-validation-for="img" class="text-danger">@ViewData["IsImgValid"]</span>
        </div>
        <div class="form-group">
            <label asp-for="name" class="control-label"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Filter" class="btn btn-default" />
        </div>
    </form>
</div>